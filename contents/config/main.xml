<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0
      http://www.kde.org/standards/kcfg/1.0/kcfg.xsd" >
  <kcfgfile name=""/>

  <group name="General">
    <entry name="useFilledIcon" type="Bool">
      <label>Use the widget's filled icon</label>
      <default>true</default>
    </entry>
    <entry name="useOutlinedIcon" type="Bool">
      <label>Use the widget's outlined icon</label>
      <default>false</default>
    </entry>
    <entry name="useFilledLightIcon" type="Bool">
      <label>Use the widget's filled light icon</label>
      <default>false</default>
    </entry>
    <entry name="useFilledDarkIcon" type="Bool">
      <label>Use the widget's filled dark icon</label>
      <default>false</default>
    </entry>
    <entry name="useOutlinedLightIcon" type="Bool">
      <label>Use the widget's outlined light icon</label>
      <default>false</default>
    </entry>
    <entry name="useOutlinedDarkIcon" type="Bool">
      <label>Use the widget's outlined dark icon</label>
      <default>false</default>
    </entry>
    <entry name="ollamaServerUrl" type="String">
      <label>Ollama Server URL</label>
      <default>http://127.0.0.1:11434</default>
    </entry>
    <entry name="pin" type="Bool">
      <label>Keep window pinned</label>
      <default>false</default>
    </entry>
    <entry name="icon" type="String">
      <label>Widget icon</label>
      <default></default>
    </entry>
    <entry name="selectedModel" type="String">
      <label>Selected Ollama model</label>
      <default></default>
    </entry>
    <entry name="enterToSend" type="Bool">
      <label>Use Enter to send message (Ctrl+Enter for new line)</label>
      <default>false</default>
    </entry>
    <entry name="completionSound" type="Bool">
      <label>Play typing sounds during AI responses</label>
      <default>false</default>
    </entry>
    <entry name="debugLogs" type="Bool">
      <label>Enable debug console logs</label>
      <default>false</default>
    </entry>
    <entry name="enableMarkdown" type="Bool">
      <label>Enable markdown rendering in AI responses</label>
      <default>false</default>
    </entry>
    <entry name="ollamaTemperature" type="Double">
      <label>AI model temperature for response creativity</label>
      <default>0.7</default>
      <min>0.0</min>
      <max>2.0</max>
    </entry>
  </group>
</kcfg>
